{
    "compilerOptions": {
        "target": "ES2020",
        "outDir": "dist",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": [
        "scripts/**/*",
        "workspaces/**/*"
    ]
}
